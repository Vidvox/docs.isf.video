body,
.navbar,
.sidebar,
.navbar .links {
    background: #2d2d2d;
}

body {
    font-family: Rubik, sans-serif;
}

h1, h2, h3, h4, h5, h6,
.navbar .site-name {
    font-weight: 500 !important;
}

.content img {
    display: block;
}

.search-box input {
    background: #a9a9a9 url(/search.svg) 0.6rem 0.5rem no-repeat;
    background-size: 1rem !important;
    color: #2d2d2d !important;
}

.suggestions {
    background-color: #3d3d3d !important;
    li:hover,
    li.focused {
        background-color: #2d2d2d !important;
    }
}

#example {
    @media screen and (min-width: 768px) {
        display: flex;
    }
    & > div,
    & > iframe {
        flex: 1;
    }
    & > div { /* the example code on the left */
        pre {
            margin-bottom: 0;
            line-height: 1.2;
            code {
                font-size: .75rem;
            }
        }
    }
    & > iframe { /* the iframe showing off the example code */
        width: 100%;
        min-height: 340px;
    }
}

